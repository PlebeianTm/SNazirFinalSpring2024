@model Cart

<form method="post">

    <input asp-for="CandyId" hidden />

    <div class="row m-5 border-2 shaow border-rounded">
        <div class="card text-center">
            <div class="row m-3">
                <div class="col-12 bg-primary rounded py-2 mb-3">
                    <p class="card-title h1 text-white text-opacity-75">
                        @Model.Candy.CandyName
                    </p>


                    <div class="col-6">
                        <img src="@Model.Candy.ImgUrl" class="card-img-top rounded p-4" />
                    </div>

                    <div class="col-6 text-warning">
                        <p>
                            By @Model.Candy.CandyPrice
                        </p>
                        <p class="card-text">
                            @Model.Candy.Description
                        </p>


                     

                        <div class="input-group mb-3">
                            <span class="input-group-text">Quantity</span>
                            <input asp-for="Quantity" class="form-control" />
                        </div>

                        <input type="submit" value="Add to Cart" class="btn btn-outline-warning"

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

