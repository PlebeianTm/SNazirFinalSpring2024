@model Candy

<h1>Delete Candy</h1>

<div class="border col-md-10">
    <form asp-action="Delete">

        <input asp-for="CandyId" hidden />
        <input asp-for="ImgUrl" hidden />

        <div class="form-group m-4">
            <label asp-for="CandyName" class="control-label">Candy Name</label>
            <input asp-for="CandyName" disabled class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="Description" class="control-label">Description</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="CandyPrice" class="control-label">Candy Price</label>
            <input asp-for="CandyPrice" disabled class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="CandyQty" class="control-label">Candy Quantity</label>
            <input asp-for="CandyQty" disabled class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="ImgUrl" class="control-label">Candy Image</label>
            <img src="@Model.ImgUrl" class="img-thumbnail" alt="Candy Image" />
        </div>

        <div class="form-group m-4">
            <input type="submit" value="Delete Candy" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this candy?');" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>

    </form>
</div>
