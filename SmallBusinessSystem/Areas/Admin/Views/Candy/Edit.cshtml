@model Candy

<h1>Update Candy</h1>

<div class="border col-md-10">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="CandyId" hidden />
        <input asp-for="ImgUrl" hidden />

        <div class="form-group m-4">
            <label asp-for="CandyName" class="control-label">Candy Name</label>
            <input asp-for="CandyName" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="Description" class="control-label">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="CandyPrice" class="control-label">Candy Price</label>
            <input asp-for="CandyPrice" class="form-control" />
        </div>

        <div class="form-group m-4">
            <label asp-for="CandyQty" class="control-label">Candy Quantity</label>
            <input asp-for="CandyQty" class="form-control" />
        </div>

        <div class="form-group m-4">
            <img class="card-img-top" src="Candy.ImgUrl" alt="Candy.CandyName" />
        </div>

        <div class="form-group m-4">
            <input type="Submit" value="Save Changes" class="form-control btn btn-primary" />
        </div>
    </form>
</div>
